<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_up_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sign_up_txt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"
            android:layout_marginTop="2dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <EditText
            android:id="@+id/name_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:hint="Enter your Name"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/hint_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Age"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_hint" />

        <EditText
            android:id="@+id/age_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:hint="Enter your Age"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/hint_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Phone Number"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <EditText
            android:id="@+id/phone_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"

            android:hint="Enter your phone number"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/hint_size"
            android:typeface="sans" />




        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />


        <EditText
            android:id="@+id/email_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:layout_below="@id/email_txt"
            android:layout_marginStart="28dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:textSize="@dimen/hint_size"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_txt" />


        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <EditText
            android:id="@+id/password_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"

            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/hint_size"
            android:typeface="sans" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_btn"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_txt"
            android:backgroundTint="@color/white"
            android:text="Register"
            android:layout_marginTop="165dp"
            android:textColor="#057FB6"
            android:textSize="@dimen/btn_Size"
            android:textStyle="bold"
            app:cornerRadius="20dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
