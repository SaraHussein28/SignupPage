<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sign_up_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:text="Profile Information"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sign_up_txt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/name_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/txt_view_cell"

            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Age"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/age_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"

            android:textSize="@dimen/txt_view_cell"

            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Phone Number"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/phone_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textSize="@dimen/txt_view_cell"

            android:paddingStart="20dp"
            android:paddingTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"

            android:typeface="sans" />




        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />


        <TextView
            android:id="@+id/email_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/email_txt"
            android:layout_marginStart="28dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:typeface="sans"
            android:textSize="@dimen/txt_view_cell"

            android:paddingStart="20dp"
            android:paddingTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_txt" />


        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_hint"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/password_hint"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_txt"
            android:layout_marginStart="29dp"
            android:background="@drawable/txt_back"
            android:drawablePadding="20dp"
            android:textSize="@dimen/txt_view_cell"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:typeface="sans" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
